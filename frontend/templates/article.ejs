<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>article</title>
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/article.css">
</head>

<body>
    <header>
        <div class="header-logo">
            <div class="logo">
                <a href="/"><img src="/public/img/logo 1.png" alt="logo baseball"></a>
            </div>
            <div class="information">
                <a href="/cart"><img src="/public/img/cart-icon 1.png" alt=""></a>
                <a href="/favorite"><img src="/public/img/favorite-icon 1.png" alt=""></a>
            </div>
        </div>
        </div>
        <div class="category">
            <a href="/category"> Shop all teams</a>
            <a href="/category/2">The MLB Champ</a>
            <a href="/favorite">Fav</a>
        </div>
        <div class="reduc">
            <p>PromoCode: PROMOMLBLONDON</p>
        </div>
    </header>
    <div class="article">
        <div class="swiper">
            
            <div class="swiper-wrapper">
 
                <div class="swiper-slide"><img src="http://localhost:3000/public/img/<%= jersey.image %>" alt="test">
                </div>
                <div class="swiper-slide"><img src="http://localhost:3000/public/img/<%= jersey.image2 %>" alt="test">
                </div>
                <div class="swiper-slide"><img src="http://localhost:3000/public/img/<%= jersey.image3 %>" alt="test">
                </div>
            </div>
    
            <div class="swiper-pagination"></div>

   
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>

        </div>
        <div class="buy">
            <div class="buy-title">
                <h1>
                    <%= jersey.name %>
                </h1>
            </div>
            <div class="stock">
                <button class="btn-fav" id="btn-fav"><box-icon name='heart' type='solid'></box-icon></button>
                <h3>in stock</h3>
            </div>
            <div class="box">
                <form action="" method="post" class="number" id="form-article">
                    <div class="size">
                        <h2 class="t-size">Size</h2>
                        <div class="taille">
                            <div class="taille">
                                <input type="radio" name="taille" id="s" value="s">
                                <label for="s">S</label>
                                <input type="radio" name="taille" id="m" value="m">
                                <label for="m">M</label>
                                <input type="radio" name="taille" id="l" value="l">
                                <label for="l">L</label>
                                <input type="radio" name="taille" id="xl" value="xl">
                                <label for="xl">XL</label>
                            </div>
                        </div>
                    </div>
                    <div class="quantity">
                        <div class="little-box">
                            <h2>Quantity</h2>
                            <label for="Quantity">quantity</label>
                            <select name="Quantity" id="quantity">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                            </select>
                </form>
            </div>
            <div class="add">
                <div class="button">
                    <button id="btn-cart">Add to cart</button>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
    <div class="description">
        <h2>Description</h2>
        <p id="description-text">
            <%= jersey.description %>
        </p>
    </div>
    <div class="jersey-container">
        <h2 class="h1">Recommandation</h2>
        <div class="article-all">
            <% recommendations.forEach(recommendation=> { %>
                <div class="box-article">
                    <a class="a-maillot" href="/article/<%= recommendation.id_jersey %>">
                        <div class="jersey-piece">
                            <p>
                                <%= recommendation.name %>
                            </p>
                            <p>
                                <%= recommendation.price %> â‚¬
                            </p>
                            <img src="http://localhost:3000/public/img/<%= recommendation.image %>" alt="test">
                        </div>
                    </a>
                </div>
                <% }) %>
        </div>
    </div>
    <footer>
        <div class="real-footer">
            <div class="left-info">
                <a href="">Legal mention</a>
                <a href="">About us</a>
            </div>
            <div class="footer-logo">
                <img src="/public/img/logo 1.png" alt="">
            </div>
            <div class="right-info">
                <a href="/favorite">My fav</a>
                <a href="/cart">Cart</a>
            </div>
        </div>
    </footer>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <script src="/public/js/article.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <script type="module">
        import Swiper from 'https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.mjs'


        const swiper = new Swiper('.swiper', {
    
            direction: 'horizontal',
            loop: true,

       
            pagination: {
                el: '.swiper-pagination',
            },

        
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },

            scrollbar: {
                el: '.swiper-scrollbar',
            },
        });
    </script>
</body>

</html>